<p id="notice"><%= notice %></p>

<h2>Properties </h2><br/>

<%= link_to 'Add new property', new_property_path, class: "btn btn-primary" %><br/><br/>

<!-- search for user -->
<div class="">

  Search for Properties
  <%= form_tag properties_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag"Search" %>
  <% end %>   <!-- form -->
</div>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Heading</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped btn-outline-*">
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.title %></td>
        <td><%= property.heading %></td>
        <td><%= property.address %></td>
        <td><%= link_to 'Show details', property, class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_property_path(property), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
