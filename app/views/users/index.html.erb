<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>Users</h2><br/>




  <%= link_to 'Add new user', new_user_path, class: "btn btn-primary", style: "color: white" %><br/><br/>

  <!-- search for user -->
  <div class="">

    Search for users
  <%= form_tag(users_path, method: 'get') do %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag("Search")   %>
  <% end %>   <!-- form -->

  </div>
  <br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Reservations</th>


        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td id=<%=user.id%>> <%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin ? 'yes' : 'no' %></td>
          <td><%= link_to 'Show user details', user, class: "btn btn-outline-secondary" %></td>
          <td><%= link_to 'Remove User', user, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Please confirm you want to delete it' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
