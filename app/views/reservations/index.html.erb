<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Booking code</th>
      <th>From date</th>
      <th>To date</th>
      <th>Property</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.booking_code %></td>
        <td><%= reservation.from_date %></td>
        <td><%= reservation.to_date %></td>
        <td><%= reservation.property_id %></td>
        <td>
          <ul class="list-group">
          <% reservation.users.each do |user| %>
            <li class="list-group-item text-center border border-white"><%= user.name %></li>
          <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', reservation, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, class: "btn btn-primary" %>
