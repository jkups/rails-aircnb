<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Please confirm you want to delete it' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
</div>
